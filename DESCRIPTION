Package: simpipe2docker
Type: Package
Title: Communicate simpipe with Docker image to avoid environment configuration and complete simulation procedure for scRNA-seq data
Version: 0.0.0.9000
Authors@R: c(
    person("Hongrui", "Duo", , "Duohongrui@cqnu.edu.cn", role = c("aut", "cre"),
           comment = c(ORCID = "0000-0001-8683-015X")),
    person("Bo", "Li", , "libo@cqnu.edu.cn", role = "aut",
           comment = c(ORCID = "0000-0001-9944-0003"))
